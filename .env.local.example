# ===== Environment =====
NODE_ENV=development
PORT=3000

# ===== Application =====
APP_BASE_URL=http://localhost:3000
APP_NAME=Páginas do Comércio

# ===== Database (PostgreSQL) =====
DATABASE_URL=postgresql://app:app_password@localhost:5432/paginas_comercio?schema=public

# ===== Redis Cache =====
REDIS_URL=redis://localhost:6379

# ===== Authentication =====
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# ===== JWT =====
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_EXPIRATION=24h

# ===== Cloudflare R2 (Static Deploy) =====
# Get these from Cloudflare Dashboard > Account > API Tokens
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=paginas-comercio-dev
R2_PUBLIC_BASE_URL=https://dev-static.seuprojeto.com

# ===== SEO Configuration =====
SEO_DEFAULT_LOCALE=pt-BR
SEO_SUPPORTED_LOCALES=pt-BR,en-US,es-ES

# ===== Logging & Observability =====
LOG_LEVEL=debug
SENTRY_DSN=

# ===== Email (Opcional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=seu-app-password
SMTP_FROM=noreply@seuprojeto.com

# ===== External APIs =====
# Google Search Console
GOOGLE_SEARCH_CONSOLE_KEY=

# ===== Feature Flags =====
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_EXPORT_STATIC=true
